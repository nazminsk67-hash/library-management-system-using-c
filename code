#include <stdio.h>
#include <stdlib.h>
#include <string.h>
struct Book {    
        int id;   
        char title[100];    
        char author[100];
};
struct Book library[100];
int count = 0;
 void addBook() { 
       printf("Enter Book ID: ");  
       scanf("%d", &library[count].id);         
       printf("Enter Book Title: ");
    scanf(" %[^\n]", library[count].title);
    printf("Enter Book Author: ");
    scanf(" %[^\n]", library[count].author);
    count++;
printf("Book added successfully!\n");
}
void displayBooks() {
    printf("\nList of Books:\n");
    for (int i = 0; i < count; i++) {
        printf("ID: %d, Title: %s, Author: %s\n", library[i].id, library[i].title, library[i].author);  
    }
}
void booksByAuthor() {
    char author[100];
    printf("Enter author name: ");
    scanf(" %[^\n]", author);
printf("\nBooks by %s:\n", author);
    for (int i = 0; i < count; i++) {
        if (strcmp(library[i].author, author) == 0)
       {    
        printf("ID: %d, Title: %s\n", library[i].id,               library[i].title);
        }
    }
}
void countBooks() 
{
    printf("\nTotal number of books: %d\n", count);
}
int main() {
    int choice;
    do {
        printf("\nLibrary Management System\n");            
        printf("1. Add Book\n2. Display Books\n3. Books by Author\n4. Count Books\n5. Exit\n");
         printf("Enter your choice: ");
        scanf("%d", &choice);
 switch(choice) {
            case 1: addBook();
                         break;
            case 2: displayBooks();
                         break;
            case 3: booksByAuthor();
                         break;
            case 4: countBooks();
                         break;
            case 5: printf("Exiting...\n"); 
                         break;
            default: printf("Invalid choice!\n");
        }
    } while(choice != 5);

    return 0;
}
